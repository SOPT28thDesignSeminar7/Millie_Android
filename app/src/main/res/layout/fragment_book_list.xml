<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.book.fragment.BookListFragment">

    <!--app:layout_constraintTop_toBottomOf="@id/book_tab" -->
    <HorizontalScrollView
        android:id="@+id/book_scroll_chip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/book_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/book_chip_highlight"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하이라이트"
                android:textSize="12sp"
                app:chipIcon="@drawable/ic"
                app:chipIconSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_tab" />

            <com.google.android.material.chip.Chip
                android:id="@+id/book_chip_post"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포스트"
                android:textSize="12sp"
                app:chipIcon="@drawable/prop_ic_post"
                app:layout_constraintStart_toEndOf="@id/book_chip_highlight"
                app:layout_constraintTop_toBottomOf="@id/book_tab" />

            <com.google.android.material.chip.Chip
                android:id="@+id/book_chip_one_review"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한줄리뷰"
                android:textSize="12sp"
                app:chipIcon="@drawable/prop_ic_review"
                app:layout_constraintStart_toEndOf="@+id/chip_post"
                app:layout_constraintTop_toBottomOf="@id/book_tab" />

            <com.google.android.material.chip.Chip
                android:id="@+id/book_chip_audio_review"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오디오리뷰"
                android:textSize="12sp"
                app:chipIcon="@drawable/prop_ic_audio"
                app:layout_constraintStart_toEndOf="@id/book_chip_one_review"
                app:layout_constraintTop_toBottomOf="@id/book_tab" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#f5f4f3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_scroll_chip" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/book_cl_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/view_line">

        <TextView
            android:id="@+id/book_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_number"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:text="|"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_number_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_total"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/book_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_recent_write"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="120dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_cl_list"
        tools:listitem="@layout/item_book_list" />

</androidx.constraintlayout.widget.ConstraintLayout>