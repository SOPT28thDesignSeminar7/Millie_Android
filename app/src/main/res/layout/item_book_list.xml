<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="230dp"
    android:paddingTop="12dp"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/iv_book_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_book_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="넛지"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_book_poster"
        app:layout_constraintTop_toTopOf="@id/iv_book_poster" />

    <TextView
        android:id="@+id/tv_book_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="리처드 H. 탈러"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_book_name"
        app:layout_constraintTop_toBottomOf="@id/tv_book_name" />

    <ImageView
        android:id="@+id/iv_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/symbol"
        app:layout_constraintStart_toStartOf="@id/tv_book_name"
        app:layout_constraintTop_toBottomOf="@id/tv_book_writer" />

    <TextView
        android:id="@+id/tv_highLight_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/iv_mark"
        app:layout_constraintTop_toBottomOf="@id/tv_book_writer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="개의 하이라이트"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/tv_highLight_number"
        app:layout_constraintTop_toBottomOf="@id/tv_book_writer" />

    <TextView
        android:id="@+id/tv_book_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="디폴트 옵션이 존재하지 않는다."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_book_name"
        app:layout_constraintTop_toBottomOf="@id/tv_highLight_number" />

    <TextView
        android:id="@+id/tv_book_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2021.03.09"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_book_name"
        app:layout_constraintTop_toBottomOf="@id/tv_book_content" />

    <ImageView
        android:id="@+id/iv_book_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prop_ic_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_book_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:src="@drawable/prop_ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_book_like" />

</androidx.constraintlayout.widget.ConstraintLayout>